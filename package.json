{
  "name": "ts-library",
  "private": true,
  "version": "1.2.0",
  "type": "module",
  "keywords": [
    "crud",
    "books",
    "library"
  ],
  "description": "A Personal Book Library",
  "repository": "github:eldarlrd/ts-library",
  "homepage": "https://eldarlrd.github.io/ts-library",
  "author": "Eldar Pashazade <eldarlrd@pm.me> (https://eldarlrd.github.io)",
  "license": "AGPL-3.0-only",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "deployer": "yarn build && gh-pages -b prod -m 'build(prod): deployment' -d dist",
    "lint": "eslint src --flag unstable_ts_config",
    "pretty": "prettier 'src/**/*.ts' --write",
    "format": "yarn lint --fix && yarn pretty"
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "bracketSameLine": true,
    "trailingComma": "none",
    "arrowParens": "avoid",
    "experimentalTernaries": true
  },
  "dependencies": {
    "mithril": "^2.2.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@types/mithril": "^2.2.7",
    "@unocss/eslint-config": "^0.63.4",
    "@unocss/preset-uno": "^0.63.4",
    "@unocss/preset-web-fonts": "^0.63.4",
    "@unocss/reset": "^0.63.4",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.11.1",
    "eslint-plugin-no-relative-import-paths": "^1.5.5",
    "eslint-plugin-promise": "^7.1.0",
    "gh-pages": "^6.2.0",
    "globals": "^15.11.0",
    "jiti": "^2.3.3",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.8.1",
    "unocss": "^0.63.4",
    "vite": "^5.4.8"
  },
  "engines": {
    "node": ">=21.0.0"
  }
}
