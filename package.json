{
  "name": "ts-library",
  "private": true,
  "version": "1.1.0",
  "type": "module",
  "keywords": [
    "crud",
    "books",
    "library"
  ],
  "description": "A Personal Book Library",
  "repository": "github:eldarlrd/ts-library",
  "homepage": "https://eldarlrd.github.io/ts-library",
  "author": "Eldar Pashazade <eldarlrd@pm.me> (https://eldarlrd.github.io)",
  "license": "AGPL-3.0-only",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "deploy": "yarn build && gh-pages -b deploy -m 'build: Deployment' -d dist",
    "lint": "eslint src/ --ext .ts --report-unused-disable-directives",
    "pretty": "prettier 'src/**/*.ts' --write",
    "format": "yarn lint --fix && yarn pretty"
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "bracketSameLine": true,
    "trailingComma": "none",
    "arrowParens": "avoid"
  },
  "dependencies": {
    "mithril": "^2.2.2"
  },
  "devDependencies": {
    "@types/mithril": "^2.2.2",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "@unocss/eslint-config": "^0.56.5",
    "@unocss/preset-uno": "^0.56.5",
    "@unocss/preset-web-fonts": "^0.56.5",
    "@unocss/reset": "^0.56.5",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-no-relative-import-paths": "^1.5.2",
    "eslint-plugin-promise": "^6.1.1",
    "gh-pages": "^6.0.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "unocss": "^0.56.5",
    "vite": "^4.4.11"
  }
}
